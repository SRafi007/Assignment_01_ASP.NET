
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Reference</title>
</head>
<body>
    <div class="header">
        <a class="btn btn-success" href="/Profile/Home">HOME</a>
        <a class="btn btn-success" href="/Profile/Education">EDUCATION</a>
        <a class="btn btn-success" href="/Profile/Projects">PROJECTS</a>
    </div>

    <div>
        <table class="info">
            <tr>

                <td>@ViewBag.faculty</td>
            </tr>
            <tr>

                <td>@ViewBag.department</td>
            </tr>
            <tr>

                <td>@ViewBag.institute</td>
            </tr>
            <tr>

                <td>@ViewBag.email</td>
            </tr>
        </table>
    </div>
    <style>
        .info {
            margin-top: 50px;
            margin-left: auto;
            margin-right: auto;
            text-align:center;
            text-size-adjust:200%;
            font-size:200%;
        }

        .header {
            width: 100%;
            text-align: center;
            position: relative;
        }
    </style>
</body>
</html>
