@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<div class="header">
    <a class="btn btn-success" href="/Profile/Education">EDUCATION</a>
    <a class="btn btn-success" href="/Profile/Projects">PROJECTS</a>
    <a class="btn btn-success" href="/Profile/Home">REFERENCE</a>
</div>
<div >
    <table class="info">
        <tr>
            <td>
                <h3>Name:</h3>
            </td>
            <td>
                <h3> @ViewBag.name</h3>
            </td>

        </tr>

        <tr>
            <td>
                <h3>ID:</h3>
            </td>
            <td>
                <h3> @ViewBag.id</h3>
            </td>

        </tr>
        <tr>
            <td>
                <h3>Email: </h3>
            </td>
            <td><h3> @ViewBag.email</h3></td>

        </tr>
        <tr>
            <td>
                <h3>Contact Number: </h3>
            </td>
            <td><h3> @ViewBag.phn_number</h3></td>

        </tr>
    </table>



</div>
<style>

    .info {
        margin-top:50px;
        margin-left: auto;
        margin-right: auto;
    }
    .header {
        width: 100%;
        text-align: center;
        position: relative;
    }
